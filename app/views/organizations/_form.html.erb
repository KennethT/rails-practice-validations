<%= form_for @organization, html: {class: "form-horizontal"} do |f| %>

<%= render partial: "shared/error", locals: {collection: @organization} %>
<%=# render "shared/error", collection: @organization also works %>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "cancel", organizations_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
