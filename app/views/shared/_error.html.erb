<!-- collection is a generic for the various objects where an error renders -->
<% if collection.errors.any? %>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <div class="alert alert-danger">
        <strong><%= pluralize(collection.errors.count, "error") %> prohibited this post from being saved:</strong>

        <ul>
          <% collection.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
